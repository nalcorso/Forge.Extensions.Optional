<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <RootNamespace>ReForge</RootNamespace>
        <Version>0.1.0-beta.1</Version>
        <Authors>Nicholas Alcorso</Authors>
        <Company>Nicholas Alcorso</Company>
        <PackageId>ReForge.Optional</PackageId>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/nalcorso/ReForge.Optional</PackageProjectUrl>
        <PackageIcon>icon.png</PackageIcon>
        <PackageTags>Optional, C#, DiscriminatedUnion</PackageTags>
        <PackageReleaseNotes>Initial beta release of ReForge.Optional.</PackageReleaseNotes>
        <Description>ReForge.Optional is a simple implementation of the Optional type in C#.</Description>
        <RepositoryUrl>https://github.com/nalcorso/ReForge.Optional.git</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\images\icon.png" Pack="true" PackagePath="\" />
        <None Include="..\..\README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

</Project>
